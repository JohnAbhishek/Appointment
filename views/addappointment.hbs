<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Include Tailwind CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    
    <title>Hello, world!</title>
  </head>
  <body>
      <div class="flex h-screen">
    <!-- Left side: Image (50% width) -->
    <div class="w-1/2.5">
      <img src="https://i.pinimg.com/originals/74/fa/89/74fa89cc607f5a2c160ca487ceab78ba.jpg" alt="Image" class="h-full w-full object-cover" />
    </div>

    <!-- Right side: Content (50% width) -->
    <div class="w-1/2">
    <section class="h-full w-full h-screen flex flex-col justify-center items-center">
      <div class="text-center">
        <h1 class="font-semibold text-5xl">Add Appointment</h1>
      </div>
      <div class="container mx-auto mt-10">
        <div class="w-full md:w-1/2 lg:w-1/3 mx-auto">
          <form action="/add-appoint" method="post">
         
            <div class="mb-4">
              <label for="start-time" class="block text-sm font-medium text-gray-700 text-2xl">Start Time</label>
              <div class="input-group date" id="start-timepicker" data-target-input="nearest">
                <input type="time" id="starttime" name="starttime" required
                  class="block w-full px-6 py-6 mt-1 bg-white border border-gray-300 rounded-md shadow-sm 
                  focus:ring-indigo-500 focus:border-indigo-500 focus:ring focus:ring-opacity-50 datetimepicker-input">
                <div class="input-group-append" data-target="#start-timepicker" data-toggle="datetimepicker">
                  <div class="input-group-text"><i class="fa fa-clock"></i></div>
                </div>
              </div>
            </div>
            <div class="mb-4">
              <label for="end-time" class="block text-sm font-medium text-gray-700 text-2xl">End Time</label>
              <div class="input-group date" id="end-timepicker" data-target-input="nearest">
                <input type="time" id="endtime" name="endtime" required
                  class="block w-full px-6 py-6 mt-1 bg-white border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 
                  focus:border-indigo-500 focus:ring focus:ring-opacity-50 datetimepicker-input">
                <div class="input-group-append" data-target="#end-timepicker" data-toggle="datetimepicker">
                  <div class="input-group-text"><i class="fa fa-clock"></i></div>
                </div>
              </div>
            </div>
            <button type="submit" class="w-full px-6 py-4 mt-4 font-semibold text-white 
            bg-indigo-600 rounded-md hover:bg-indigo-700 focus:ring focus:ring-opacity-50 text-2xl">Add Appointment</button>
          </form>
        </div>
      </div>
    </section>
    </div>
      </div>
    <style>
  .datetimepicker-input {
    z-index: 9999; /* Set a higher z-index value */
  }
</style>

    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>

    <script>
      $(document).ready(function() {
        $('#start-timepicker').datetimepicker({
          format: 'HH:mm',
        });

        $('#end-timepicker').datetimepicker({
          format: 'HH:mm',
        });
      });
    </script>
  </body>
</html>
